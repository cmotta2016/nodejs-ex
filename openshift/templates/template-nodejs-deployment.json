{
   "apiVersion": "v1",
   "kind": "Template",
   "labels": {
      "template": "nodejs-deployment"
   },
   "metadata": {
      "name": "nodejs-deployment"
   },
   "objects": [
      {
         "apiVersion": "apps.openshift.io/v1",
         "kind": "DeploymentConfig",
         "metadata": {
            "labels": {
               "app": "nodejs-ex"
            },
            "name": "nodejs-ex"
         },
         "spec": {
            "replicas": 1,
            "selector": {
               "app": "nodejs-ex",
               "deploymentconfig": "nodejs-ex"
            },
            "template": {
               "metadata": {
                  "labels": {
                     "app": "nodejs-ex",
                     "deploymentconfig": "nodejs-ex"
                  }
               },
               "spec": {
                  "containers": [
                     {
                        "image": "docker-registry.default.svc:5000/cicd/nodejs-ex:latest",
                        "imagePullPolicy": "Always",
                        "name": "nodejs-ex",
                        "ports": [
                           {
                              "containerPort": 8080,
                              "protocol": "TCP"
                           }
                        ]
                     }
                  ]
               }
            }
         }
      },
      {
         "apiVersion": "v1",
         "kind": "Service",
         "metadata": {
            "labels": {
               "app": "nodejs-ex"
            },
            "name": "nodejs-ex"
         },
         "spec": {
            "ports": [
               {
                  "name": "8080-tcp",
                  "port": 8080,
                  "protocol": "TCP",
                  "targetPort": 8080
               }
            ],
            "selector": {
               "app": "nodejs-ex",
               "deploymentconfig": "nodejs-ex"
            },
            "type": "ClusterIP"
         }
      },
      {
         "apiVersion": "route.openshift.io/v1",
         "kind": "Route",
         "metadata": {
            "labels": {
               "app": "nodejs-ex"
            },
            "name": "nodejs-ex"
         },
         "spec": {
            "port": {
               "targetPort": "8080-tcp"
            },
            "to": {
               "kind": "Service",
               "name": "nodejs-ex"
            }
         }
      }
   ]
}
